<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0E7F6"
    android:padding="16dp">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/expenseText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Expense"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/refreshIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_refresh" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#7B30E3"
            android:drawablePadding="8dp"
            android:paddingHorizontal="8dp"
            android:text="Save"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Category Grid -->

    <!-- Selected Category & Inputs -->
    <GridLayout
        android:id="@+id/categoryGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="3"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">


        <!-- Example Category Buttons -->


        <ImageButton
            android:id="@+id/catShopping"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/category_selector"
            android:contentDescription="Shopping"
            android:src="@drawable/ic_shopping" />

        <ImageButton
            android:id="@+id/catFood"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/category_selector"
            android:contentDescription="Food"
            android:src="@drawable/ic_food" />

        <ImageButton
            android:id="@+id/catTransport"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/category_selector"
            android:contentDescription="Transport"
            android:src="@drawable/ic_transport" />

        <ImageButton
            android:id="@+id/catSalary"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/category_selector"
            android:contentDescription="Salary"
            android:src="@drawable/ic_salary" />

        <ImageButton
            android:id="@+id/catTrading"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/category_selector"
            android:contentDescription="Trading"
            android:src="@drawable/ic_trading" />

        <ImageButton
            android:id="@+id/catFun"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/category_selector"
            android:contentDescription="Fun"
            android:src="@drawable/ic_fun" />

        <ImageButton
            android:id="@+id/catEducation"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/category_selector"
            android:contentDescription="Education"
            android:src="@drawable/ic_educaation" />

        <ImageButton
            android:id="@+id/catBills"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/category_selector"
            android:contentDescription="Bills"
            android:src="@drawable/ic_bills" />

        <ImageButton
            android:id="@+id/catOthers"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/category_selector"
            android:contentDescription="Others"
            android:src="@drawable/ic_others" />

        <TextView
            android:id="@+id/shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:rotationX="1"
            android:text="Shopping" />

        <TextView
            android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:rotationX="1"
            android:text="Food" />

        <TextView
            android:id="@+id/transport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:rotationX="1"
            android:text="Transport" />

        <TextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:rotationX="1"
            android:text="Salary" />

        <TextView
            android:id="@+id/Trading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:rotationX="1"
            android:text="Trading" />

        <TextView
            android:id="@+id/Fun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:rotationX="1"
            android:text="Fun" />

        <TextView
            android:id="@+id/Education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:rotationX="1"
            android:text="Education" />

        <TextView
            android:id="@+id/bills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:rotationX="1"
            android:text="Bills" />

        <TextView
            android:id="@+id/Others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:rotationX="1"
            android:text="Others" />

        <!-- Add the rest (Food, Transport, Salary...) similar to above -->
    </GridLayout>

    <LinearLayout
        android:id="@+id/inputSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryGrid">

        <ImageView
            android:id="@+id/selectedIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_others"
            android:visibility="gone" />

        <EditText
            android:id="@+id/titleInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/amountInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="Amount"
            android:inputType="numberDecimal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dateTimeSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="#DDDDDD"
            android:text="Select Date"
            android:gravity="center" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="#DDDDDD"
            android:text="Select Time"
            android:gravity="center"
            android:layout_marginStart="8dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
